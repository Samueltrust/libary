Javascript
let gridBoxes = document.querySelector('.gridBoxes');
let box;

function createBoxes() {
    for(let i = 0; i < 10; i++) {
        box = document.createElement("div");
        
        box.className = "box";
        gridBoxes.appendChild(box);     
    }
}

createBoxes();
